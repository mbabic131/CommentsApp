{% extends 'base.html.twig' %}

{% block title %} Novi komentar {% endblock %}

{% block body %}

	<!-- Thank you message -->
	{% if app.session.flashBag.has('successMessg') %}
		<div class="row">
			<div class="alert alert-success col-md-6">
		   {% for msg in app.session.flashBag.get('successMessg') %}
				{{ msg }}
			{% endfor %}
			</div>
			<div class="col-md-12">
				<a href="/add-comment"><button type="button" class="btn btn-success">Dodaj novi komentar</button></a>
			</div>
		</div>
	{% else %}

	<div class="row">
		<h4>Dodaj novi komentar</h4>

		<!-- Validation message -->
	   {% if app.session.flashBag.has('valMessg') %}
	   	<div class="col-md-12">	
		   <div class="alert alert-danger col-md-6">
			   {% for msg in app.session.flashBag.get('valMessg') %}
				   {{ msg }}
			   {% endfor %}
		   </div>
		</div>
	   {% endif %}

		<div class="col-md-6 col-xs-12">
			<form class="form-horizontal" method="POST" action="{{ url('store_comment') }}">
			  <div class="form-group">
			    <label for="author">Ime Autora</label>
			    <input type="text" class="form-control" id="author" name="author_name" placeholder="Ime autora">
			  </div>
			  <div class="form-group">
			    <label for="comment">Komentar</label>
			    <textarea class="form-control" name="comment_text" placeholder="UpiÅ¡ite komentar"></textarea>
			  </div>
			  <button type="submit" class="btn btn-success">Spremi</button>
			</form>
		</div> <!-- ./col-md-6 col-xs-12 -->
	</div> <!-- ./row -->
	{% endif %}

{% endblock %}
